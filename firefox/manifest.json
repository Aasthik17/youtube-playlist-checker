{
  "manifest_version": 2,
  "name": "YouTube Playlist Checker",
  "version": "1.0.0",
  "description": "Create and manage checklists for YouTube playlists to track your viewing progress",
  
  "permissions": [
    "storage",
    "activeTab",
    "https://www.youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ],
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    },
    "default_title": "YouTube Playlist Checker"
  },
  
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "youtube-playlist-checker@extension",
      "strict_min_version": "78.0"
    }
  }
}